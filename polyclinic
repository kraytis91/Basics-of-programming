[StartCode]
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSlight
{
    class Program
    {
        static void Main(string[] args)
        {
            int peopleInLine;
            int patientAppointmentTime = 10;
            int waitingTime;
            int waitingTimeHours;
            int waitingTimeMinutes;
            Console.Write("Сколько старушек перед вами в очереди? ");
            peopleInLine = Convert.ToInt32(Console.ReadLine());
            waitingTime = peopleInLine * patientAppointmentTime;
            waitingTimeHours = waitingTime / 60;
            waitingTimeMinutes = waitingTime % 60;
            Console.Write($"Вы должны отстоять в очереди {waitingTimeHours} часа и {waitingTimeMinutes} минут.");
            Console.ReadKey();
        }
    }
}
[EndCode]
