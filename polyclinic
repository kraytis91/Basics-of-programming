[StartCode]
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSlight
{
    class Program
    {
        static void Main(string[] args)
        {
            int peopleInQueue;
            int patientAppointmentTime = 10;
            int waitingTimeInQueue;
            int WaitingTimeInQueueHours;
            int waitingTimeInQueueMinutes;
            int minutesInAnHour = 60;
            
            Console.Write("Сколько старушек перед вами в очереди? ");
            peopleInQueue = Convert.ToInt32(Console.ReadLine());
            waitingTimeInQueue = peopleInQueue * patientAppointmentTime;
            WaitingTimeInQueueHours = waitingTimeInQueue / minutesInAnHour;
            waitingTimeInQueueMinutes = waitingTimeInQueue % minutesInAnHour;
            Console.Write($"Вы должны отстоять в очереди {WaitingTimeInQueueHours} часа и {waitingTimeInQueueMinutes} минут.");
            
            Console.ReadKey();
        }
    }
}
[EndCode]
